<div class="container"  ng-controller="patientController">
    <div class="card-columns">
        <div class="card" style="width:300px">
            <div class="card-header" align="center">Actions</div>
            <div class="card-body">
                <a href="/patient/sign-list/{{patient.id}}" class="card-link">View Vital sign</a><br><br>
                <a href="/patient/{{patient.id}}" class="card-link">Back</a>
            </div>
        </div>
        <div class="card offset-sm-2" style="width:500px">
            <div class="card-header">Add Vital Signs Of {{patient.name}} </div>
            <div class="card-body">
                <form method="post" action="/patient/signs/{{patient.id}}">
                    <div class="form-group">
                        <label for="bp" > Blood Presure: </label>
                        <input type="text" id="bp" class="form-control" name="bp">
                    </div>

                    <div class="form-group">
                        <label for="temp"> Body Temperature </label>
                        <input type="text" id="temp" class="form-control" name="temp">
                    </div>

                    <div class="form-group">
                        <label for="hr"> Heart Rate </label>
                        <input type="text" id="hr" class="form-control" name="hr">
                    </div>

                    <div class="form-group">
                        <label for="rr"> Respiratory rate </label>
                        <input type="text" id="rr" class="form-control" name="rr">
                    </div>
                    <input type="hidden" name="nurse" value="{{user.id}}">

                    <input type="submit" class="btn btn-primary" value="Add">
                </form>
            </div>
        </div>
    </div>
</div>