<div class="container">
    <h3 align="center">
        Add New Daily Tip
    </h3>

    <form method="post" action="new-tip">
        <div class="form-group">
            <label for="title"> Add Title:</label>
            <input type="text" class="form-control" id="title" value="{{title}}" name="title" required>
        </div>
        <div class="form-group">
            <label for="description"> Add Description here:</label>
            <textarea type="text" class="form-control" id="description" name="description" required>
                {{description}}
            </textarea>
        </div>
        <input type="submit" value="add"class=" btn btn-primary">
    </form>
</div>